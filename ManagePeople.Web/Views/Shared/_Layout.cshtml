<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
            <a href="#">
            <img src="~/img/nhlanhla-dev.png" width="50" height="50" alt="logo"/>
            </a>
            <nav class="navigation">
                <a class="site-link" href="#">Home</a>
                <a href="#">About</a>
                <a href="#">Contact</a>
                <button id="persons-btn" class="login-btn">Persons</button>
            </nav>
    </header>

    

    <div class="container-fluid">
        @RenderBody()
        <main role="main" class="pb-3">
            <input type="hidden" id="person-url" value="@Url.Action("Index", "Person")"/>
            <div class="wrapper">
                <span class="icon-close">
                    <ion-icon name="close"></ion-icon>
                </span>
                <div class="form-box login">
                    <h2>Login</h2>
                    
                        <div class="input-box">
                            <span class="icon">
                                <ion-icon name="mail"></ion-icon>
                            </span>
                            <input id="log-usernameTxt" type="email" required />
                            <label>Username</label>
                        </div>
                        <div class="input-box">
                            <span class="icon">
                                <ion-icon name="lock-closed"></ion-icon>
                            </span>
                            <input id="log-passwordTxt" type="password" required />
                            <label>Password</label>
                        <p id="log-error-label" style="color:red; font-weight: bold;"></p>
                        </div>
                        <button id="site-login-btn" class="site-login-btn" type="button"> Login</button>

                        <div class="login-register">
                            <p class="register-link">
                                Don't have an account?
                                <a href="#">Register</a>
                            </p>
                        </div>
                    
                </div>

                <div class="form-box register">
                    <h2>Register</h2>
                    
                        <div class="input-box">
                            <span class="icon">
                                <ion-icon name="mail"></ion-icon>
                            </span>
                            <input id="usernameTxt" type="email" required />
                            <label>Username</label>
                        </div>
                        <div class="input-box">
                            <span class="icon">
                                <ion-icon name="lock-closed"></ion-icon>
                            </span>
                            <input id="passwordTxt" type="password" required />
                            <label>Password</label>
                        </div>
                        <div class="input-box">
                            <span class="icon">
                                <ion-icon name="lock-closed"></ion-icon>
                            </span>
                            <input id="confirmTxt" type="password" required />
                            <label>Confirm</label>
                        <p id="error-label" style="color:red; font-weight: bold;"></p>
                        </div>
                        
                        <button id="site-register-btn" class="site-login-btn" type="button"> Register</button>

                        <div class="login-register">
                            <p class="login-link">
                                Already have an account?
                                <a href="#">Login</a>
                            </p>
                        </div>
                   
                </div>
            </div>
            
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/shared.js" asp-append-version="true"></script>
    <script src="~/js/register.js" asp-append-version="true"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>


    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
